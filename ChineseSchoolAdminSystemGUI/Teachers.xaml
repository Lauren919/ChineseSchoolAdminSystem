<Page x:Class="ChineseSchoolAdminSystemGUI.Teachers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChineseSchoolAdminSystemGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Teachers">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListBox x:Name="TeacherListBox" SelectionChanged="TeacherListBox_SelectionChanged"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!--Buttons-->
                <Button x:Name="AddTeacherBT" Content="Add Teacher" FontSize="25" Click="AddTeacherBT_Click"/>
                <Button x:Name="EditTeacherBt" Grid.Column="1" FontSize="25" Content="Edit Teacher" Click="EditTeacherBt_Click"/>
                <Button x:Name="DeleteTeacherBt" Grid.Row="1" Grid.Column="1" FontSize="25" Content="Delete Teacher" Click="DeleteTeacherBt_Click"/>
                <Button x:Name="ResetBt" Grid.Row="1" FontSize="25" Content="Reset" Height="75" VerticalAlignment="Bottom" Click="ResetBt_Click"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Labels-->
            <Label x:Name="TeacherIDLabel" Content="Teacher ID:"/>
            <Label x:Name="TFirstNameLabel" Content="First Name:" Grid.Row="1"/>
            <Label x:Name="TLastNameLabel" Grid.Row="2" Content="Last Name:"/>
            <Label x:Name="TeacherEmailLabel" Grid.Row="3" Content="Email:"/>

            <!--TextBoxes-->
            <TextBox x:Name="TeacherIDTB" Grid.Column="1"/>
            <TextBox x:Name="TFirstNameTB" Grid.Row="1" Grid.Column="1"/>
            <TextBox x:Name="TLastNameTB" Grid.Row="2" Grid.Column="1"/>
            <TextBox x:Name="TeacherEmailTB" Grid.Row="3" Grid.Column="1"/>

        </Grid>

    </Grid>
</Page>
